# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=ai-generator-secret-key-change-this-in-production

# AI Model Configuration
CUDA_VISIBLE_DEVICES=0
